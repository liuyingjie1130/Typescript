{
    "include": ["./src/**/*"], //指定哪些ts文件需要被编译  **任意目录 *任意文件
//    "exclude": ["./src/home/**/*"],  //指定哪些ts文件不需要被编译,
//    "extends": "./config/base.json", // 继承配置文件
//    "files": ["app.ts"],  //指定被编译文件列表，适用于需要编译文件较少时
    "compilerOptions": {
        "target": "ES6",//指定被编译成es的版本
        "module": "ES6",//指定模块化规范
//        "lib": [],//指定代码运行时所包含的库 ，一般不用改
        "outDir": "./dist",//指定编译后文件目录
//        "outFile": "./dist/app.js",//将代码合并成一个文件
        "allowJs": true,//是否对js进行编译，默认false
        "checkJs": true,//是否对js进行检查，默认false
        "removeComments": true,//是否删除注释，默认false
        "strict": true,//所有严格类型检查总开关，默认false
//        "noEmit": true,//不生成编译文件 ，默认false
        "noEmitOnError": true,//当有错误时不生成编译文件 ，默认false
        "alwaysStrict": true,//设置编译完的文件是否使用严格模式，默认false
        "noImplicitAny": true,//不允许隐式any
        "noImplicitThis": true,//不允许不明确类型的this
        "strictNullChecks": true,//严格的检查空值
    }
}
